<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:padding="42dp"
  android:background="#000000"
  android:layout_width="match_parent"
  android:layout_height="match_parent" >

  <EditText
    android:id="@+id/pin"
    android:textSize="42sp"
    android:textStyle="bold"
    android:textColor="#fff"
    android:selectAllOnFocus="true"
    android:inputType="numberPassword"
    android:password="true"
    android:layout_width="256dp"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:imeOptions="flagNoExtractUi"
    android:hint="pin" />

  <EditText
    android:id="@+id/pin2"
    android:textSize="42sp"
    android:textStyle="bold"
    android:textColor="#fff"
    android:selectAllOnFocus="true"
    android:inputType="numberPassword"
    android:password="true"
    android:layout_alignParentRight="true"
    android:layout_height="wrap_content"
    android:layout_below="@id/pin"
    android:layout_width="256dp"
    android:imeOptions="flagNoExtractUi"
    android:hint="pin nochmal" />

  <TextView
    android:id="@+id/contact"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="128dp"
    android:layout_alignParentTop="true"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@id/pin2"
    style="?android:buttonStyle"
    android:drawableTop="@drawable/ic_menu_invite"
    />

  <EditText
    android:id="@+id/name"
    android:textSize="44sp"
    android:textStyle="bold"
    android:textColor="#fff"
    android:layout_toRightOf="@id/contact"
    android:layout_alignBottom="@id/contact"
    android:layout_marginRight="16dp"
    android:layout_toLeftOf="@id/pin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:imeOptions="flagNoExtractUi"
    android:hint="name" />

  <Button
    android:id="@+id/scan"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignLeft="@id/pin"
    android:layout_below="@id/pin2"
    android:text="Scan"
    android:textSize="42sp"
    android:textColor="@color/blue"
    android:layout_gravity="right|bottom"/>

</RelativeLayout>
