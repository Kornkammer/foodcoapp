<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="horizontal"
  android:background="@color/medium_blue"
  android:id="@+id/frame"
  tools:context="org.baobab.pos.PosActivity" >

  <LinearLayout
    android:minWidth="100dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:orientation="vertical" >

    <fragment
      android:id="@+id/transaction"
      class="org.baobab.pos.TransactionFragment"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <View
      android:background="@color/xdark_blue"
      android:layout_width="match_parent"
      android:layout_height="3dp" />

    <TextView
      android:id="@+id/total"
      android:textStyle="bold"
      android:textSize="@dimen/font_size_large"
      android:gravity="right"
      android:clickable="true"
      android:paddingTop="13dp"
      android:paddingBottom="13dp"
      android:textColor="@color/xdark_red"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="0.00" />

    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" >

      <TextView
        android:id="@+id/scan"
        android:gravity="center"
        android:clickable="true"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="@dimen/xlarge"
        android:textColor="@color/light_blue"
        android:background="@drawable/background_blue"
        android:text="Scan" />
      <TextView
        android:id="@+id/pin"
        android:gravity="center"
        android:clickable="true"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="@dimen/xlarge"
        android:textColor="@color/light_blue"
        android:background="@drawable/background_blue"
        android:text="Pin" />
      <TextView
        android:id="@+id/bar"
        android:gravity="center"
        android:clickable="true"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="@dimen/xlarge"
        android:textColor="@color/light_blue"
        android:background="@drawable/background_blue"
        android:text="Bar" />
    </LinearLayout>

    <TextView
      android:id="@+id/sum"
      android:textStyle="bold"
      android:textSize="57dp"
      android:gravity="right"
      android:clickable="true"
      android:paddingTop="13dp"
      android:paddingBottom="13dp"
      android:textColor="@color/xdark_red"
      android:background="@drawable/background_light"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_gravity="bottom"
      android:text="0.00" />

  </LinearLayout>

  <org.baobab.pos.StretchableGrid
    android:id="@+id/products"
    app:rowCount="4"
    app:columnCount="4"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:keepScreenOn="true" />
</LinearLayout>

