<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.baobab.pos" >

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.baobab.pos.PosActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.baobab.pos.ProductEditActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.EDIT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="org.baobab.pos/products" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.baobab.pos.LegitimateActivity"
            android:screenOrientation="reverseLandscape"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>
        <activity
            android:name="org.baobab.pos.WinActivity"
            android:screenOrientation="reverseLandscape"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:label="@string/transactions"
            android:clearTaskOnLaunch="true"
            android:taskAffinity="accounts.transactions"
            android:name="org.baobab.pos.TransactionsActivity" >
          <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
          </intent-filter>
        </activity>

        <provider
            android:name="org.baobab.pos.StorageProvider"
            android:authorities="org.baobab.pos" />

        <activity
            android:name="org.baobab.pos.AccountsActivity"
            android:clearTaskOnLaunch="true"
            android:screenOrientation="portrait"
            android:taskAffinity="accounts.accounts"
            android:label="@string/accounts" >
          <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
          </intent-filter>
          <intent-filter>
            <action android:name="android.intent.action.EDIT" />
            <category android:name="android.intent.category.DEFAULT" />
            <data android:mimeType="org.baobab.pos/accounts" />
          </intent-filter>
        </activity>
    </application>

</manifest>
