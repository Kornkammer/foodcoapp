<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="horizontal"
  android:background="@color/medium_blue"
  android:id="@+id/frame"
  tools:context="org.baobab.foodcoapp.PosActivity" >

  <LinearLayout
    android:minWidth="@dimen/minwidth"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:orientation="vertical" >

    <fragment
      android:id="@+id/transaction"
      class="org.baobab.foodcoapp.TransactionFragment"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:layout_weight="1" />

    <TextView
      android:id="@+id/header"
      android:textColor="@color/medium_red"
      android:background="@color/xdark_red"
      android:text="zu bezahlen"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="@dimen/xxlarge" >

      <TextView
        android:id="@+id/scan"
        android:gravity="center"
        android:clickable="true"
        android:layout_weight="1"
        android:layout_width="@dimen/xlarge"
        android:layout_height="match_parent"
        android:textColor="@color/xlight_blue"
        android:background="@drawable/background_blue"
        android:text="QR" />
      <TextView
        android:id="@+id/pin"
        android:gravity="center"
        android:clickable="true"
        android:layout_weight="1"
        android:layout_width="@dimen/xlarge"
        android:layout_height="match_parent"
        android:textColor="@color/light_blue"
        android:background="@drawable/background_blue"
        android:text="Pin" />
      <TextView
        android:id="@+id/bar"
        android:gravity="center"
        android:clickable="true"
        android:layout_weight="1"
        android:layout_width="@dimen/xlarge"
        android:layout_height="match_parent"
        android:textColor="@color/light_blue"
        android:background="@drawable/background_blue"
        android:text="Bar" />

      <TextView
        android:id="@+id/sum"
        android:textStyle="bold"
        android:textSize="@dimen/font_size_large"
        android:gravity="center_vertical|end"
        android:clickable="true"
        android:textColor="@color/xdark_red"
        android:background="@drawable/background_light"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="0.00" />

    </LinearLayout>

  </LinearLayout>

  <android.support.v4.view.ViewPager
    android:id="@+id/pager"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:keepScreenOn="true" />
</LinearLayout>

