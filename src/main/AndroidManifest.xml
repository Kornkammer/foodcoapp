<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.baobab.foodcoapp" >

  <uses-feature
    android:name="android.hardware.camera"
    android:required="true" />

  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.READ_CONTACTS" />
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.VIBRATE" />
  <uses-feature android:name="android.hardware.usb.host" />

  <application
    android:allowBackup="true"
    android:icon="@drawable/ic_launcher"
    android:name=".FoodcoApplication"
    android:theme="@style/AppTheme" >
    <activity
      android:name="org.baobab.foodcoapp.PosActivity"
      android:configChanges="orientation|keyboardHidden|screenSize"
      android:label="@string/app_name"
      android:icon="@drawable/ic_launcher"
      android:launchMode="singleTask"
      android:screenOrientation="landscape" >
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
      <intent-filter>
        <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
      </intent-filter>
      <meta-data android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                 android:resource="@xml/device_filter" />
    </activity>
    <activity
      android:name="org.baobab.foodcoapp.ProductEditActivity"
      android:screenOrientation="landscape"
      android:theme="@style/AppTheme" >
      <intent-filter>
        <action android:name="android.intent.action.EDIT" />
        <category android:name="android.intent.category.DEFAULT" />
        <data android:mimeType="org.baobab.foodcoapp/products" />
      </intent-filter>
    </activity>
    <activity
      android:name="org.baobab.foodcoapp.LegitimateActivity"
      android:theme="@style/AppTheme"
      android:windowSoftInputMode="stateAlwaysVisible" >
    </activity>
    <activity
      android:name="org.baobab.foodcoapp.ResetPinActivity"
      android:theme="@style/AppTheme"
      android:windowSoftInputMode="stateAlwaysVisible" >
    </activity>
    <activity
      android:name="org.baobab.foodcoapp.WinActivity"
      android:theme="@style/FullscreenTheme" >
    </activity>
    <activity
      android:label="@string/transactions"
      android:icon="@drawable/book"
      android:clearTaskOnLaunch="true"
      android:screenOrientation="portrait"
      android:taskAffinity="accounts.transactions"
      android:name="org.baobab.foodcoapp.TransactionsActivity" >
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />
        <data android:scheme="content" />
        <data android:mimeType="text/csv" />
      </intent-filter>
    </activity>

    <provider
      android:name="org.baobab.foodcoapp.AccountingProvider"
      android:authorities="org.baobab.foodcoapp" />

    <activity
      android:name="org.baobab.foodcoapp.AccountActivity"
      android:icon="@drawable/book"
      android:clearTaskOnLaunch="true"
      android:screenOrientation="landscape"
      android:taskAffinity="accounts.accounts"
      android:windowSoftInputMode="adjustPan"
      android:label="@string/balance" >
      <intent-filter>
        <action android:name="android.intent.action.EDIT" />
        <category android:name="android.intent.category.DEFAULT" />
        <data android:mimeType="org.baobab.foodcoapp/accounts" />
      </intent-filter>
    </activity>
    <activity
      android:name="org.baobab.foodcoapp.SettingsActivity"
      android:theme="@android:style/Theme.Black" >
    </activity>
    <activity
      android:name="org.acra.CrashReportDialog"
      android:theme="@android:style/Theme.Dialog"
      android:process=":error_report"
      android:launchMode="singleInstance"
      android:excludeFromRecents="true"
      android:finishOnTaskLaunch="true" />
  </application>

</manifest>
