<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.baobab.foodcoapp" >

  <uses-feature
    android:name="android.hardware.camera"
    android:required="true" />

  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.READ_CONTACTS" />
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.VIBRATE" />

  <application
    android:allowBackup="true"
    android:icon="@drawable/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme" >
    <activity
      android:name="org.baobab.foodcoapp.PosActivity"
      android:configChanges="orientation|keyboardHidden|screenSize"
      android:label="@string/shopping"
      android:screenOrientation="landscape" >
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name="org.baobab.foodcoapp.ProductEditActivity"
      android:screenOrientation="landscape"
      android:theme="@style/AppTheme" >
      <intent-filter>
        <action android:name="android.intent.action.EDIT" />
        <category android:name="android.intent.category.DEFAULT" />
        <data android:mimeType="org.baobab.foodcoapp/products" />
      </intent-filter>
    </activity>
    <activity
      android:name="org.baobab.foodcoapp.LegitimateActivity"
      android:theme="@style/AppTheme"
      android:windowSoftInputMode="stateAlwaysVisible" >
    </activity>
    <activity
      android:name="org.baobab.foodcoapp.WinActivity"
      android:screenOrientation="reverseLandscape"
      android:theme="@style/FullscreenTheme" >
    </activity>
    <activity
      android:label="@string/transactions"
      android:clearTaskOnLaunch="true"
      android:taskAffinity="accounts.transactions"
      android:name="org.baobab.foodcoapp.TransactionsActivity" >
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <provider
      android:name="org.baobab.foodcoapp.AccountingProvider"
      android:authorities="org.baobab.foodcoapp" />

    <activity
      android:name="org.baobab.foodcoapp.AccountActivity"
      android:clearTaskOnLaunch="true"
      android:screenOrientation="landscape"
      android:taskAffinity="accounts.accounts"
      android:windowSoftInputMode="adjustPan"
      android:label="@string/balance" >
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
      <intent-filter>
        <action android:name="android.intent.action.EDIT" />
        <category android:name="android.intent.category.DEFAULT" />
        <data android:mimeType="org.baobab.foodcoapp/accounts" />
      </intent-filter>
    </activity>
    <activity
      android:name="org.baobab.foodcoapp.SettingsActivity"
      android:theme="@android:style/Theme.Black" >
    </activity>
  </application>

</manifest>
